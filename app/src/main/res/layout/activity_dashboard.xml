<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cars.Dashboard"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/pickacar_back"
        android:backgroundTint="@color/colorPrimary"
        android:backgroundTintMode="add"
        android:orientation="horizontal"
        android:gravity="center"
        tools:layout_editor_absoluteX="-59dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/pick_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent"
            android:fontFamily="@font/whitney_bold"
            android:onClick="showCarList"
            android:text="Pick Now"
            android:textAllCaps="false"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cl"
        android:layout_width="409dp"
        android:layout_height="508dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="222dp">

        <TextView
            android:id="@+id/available_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/whitney_bold"
            android:gravity="center_horizontal"
            android:text="231 Available Cars"
            android:textAlignment="center"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/journey_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/whitney_bold"
            android:gravity="center_horizontal"
            android:text="2000 Journeys"
            android:textAlignment="center"
            android:textColor="@color/colorText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>