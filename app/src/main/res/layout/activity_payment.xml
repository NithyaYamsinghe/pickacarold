<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".User.Payment">

    <LinearLayout
        android:id="@+id/payment_header_layout"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/paymentHeader"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/whitney_bold"
            android:text="@string/txtV1"
            android:textAlignment="center"
            android:textColor="@color/colorTint"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_details"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_border"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276">

        <EditText
            android:id="@+id/card_name"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTint"
            android:ems="10"
            android:fontFamily="@font/whitney_regular"
            android:hint="Name on Card"
            android:inputType="textPersonName"
            android:text="@string/txtE1"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTint" />

        <EditText
            android:id="@+id/card_no"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTint"
            android:ems="10"
            android:fontFamily="@font/whitney_regular"
            android:hint="Name on Card"
            android:inputType="number"
            android:text="@string/txtE2"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTint" />

        <EditText
            android:id="@+id/exp_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTint"
            android:ems="10"
            android:fontFamily="@font/whitney_regular"
            android:hint="Name on Card"
            android:inputType="date"
            android:text="@string/txtE3"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTint" />

        <EditText
            android:id="@+id/ccv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTint"
            android:ems="10"
            android:fontFamily="@font/whitney_regular"
            android:hint="Name on Card"
            android:inputType="number"
            android:text="@string/txt4"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_border"
        android:padding="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>