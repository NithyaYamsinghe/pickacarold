<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/reviews_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        >

    <LinearLayout
        android:id="@+id/review_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By yasmikash"
            android:textColor="@color/colorTint"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="9dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 June 2020"
            android:textColor="@color/colorTint"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="9dp"

            />

    </LinearLayout>

        <TextView
            android:id="@+id/review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="It was a great journey with this vehicle"
            android:textColor="@color/colorText"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="9dp" />

        <TextView
            android:id="@+id/review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi! Thanks for updating vector image. We have now accepted the custom order. We will get you the favicons for simplimingle and coinstoyap sometime next week. Please also let us know how much it will cost to connect the mailchimp to our simplimingle registration. For this, we will be creating a new audience at mailchimp and we'll only be collecting the user's email address and first and last name"
            android:textColor="@color/colorText"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="9dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>