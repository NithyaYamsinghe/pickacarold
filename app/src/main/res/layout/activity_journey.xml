<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".User.Journey">

    <LinearLayout
        android:id='@+id/journey_header_layout'
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/journey_header"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/jdtxtV1"
            android:textAlignment="center"
            android:fontFamily="@font/whitney_bold"
            android:textColor="@color/colorTint"
            android:textSize="30dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="337dp"
        android:layout_height="230dp"
        android:src="@drawable/axela_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.247" />

    <Button
        android:id="@+id/btn_rate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/jdbtn1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <TableLayout
        android:id="@+id/journey"
        android:layout_width="284dp"
        android:layout_height="209dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69">

        <TableRow android:id="@+id/jd_date_row1">

            <TextView
                android:id="@+id/jd_date_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV2"
                android:textColor="@color/colorTint"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jd_date_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV3"
                android:textColor="@color/colorTint"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>


        <TableRow android:id="@+id/jd_location_row2">

            <TextView
                android:id="@+id/jd_location_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV4"
                android:textColor="@color/colorTint"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jd_location_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV5"
                android:textColor="@color/colorTint"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:id="@+id/jd_destination_row3">

            <TextView
                android:id="@+id/jd_destination_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV6"
                android:textColor="@color/colorTint"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jd_destination_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV7"
                android:textColor="@color/colorTint"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:id="@+id/jd_passengers_row4">>

            <TextView
                android:id="@+id/jd_passengers_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV8"
                android:textColor="@color/colorTint"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jd_passengers_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV9"
                android:textColor="@color/colorTint"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:id="@+id/jd_distance_row5">>

            <TextView
                android:id="@+id/jd_distance_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV10"
                android:textColor="@color/colorTint"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jd_distance_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV11"
                android:textColor="@color/colorTint"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:id="@+id/jd_amount_row6">

            <TextView
                android:id="@+id/jd_amount_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV12"
                android:textColor="@color/colorTint"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jd_amount_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/whitney_bold"
                android:text="@string/jdtxtV13"
                android:textColor="@color/colorTint"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>