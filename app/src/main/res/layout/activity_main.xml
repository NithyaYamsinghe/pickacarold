<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:padding="40dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/login_layout"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/header_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/whitney_bold"
            android:textSize="30dp"
            android:textColor="@color/colorWiteText"
            android:textAlignment="center"
            android:clickable="true"
            android:text="Pick A Car" />
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/whitney_regular"
            android:textSize="20dp"
            android:textColor="@color/colorWiteText"
            android:textAlignment="center"
            android:clickable="true"
            android:text="Log in to your account" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_layout"
        android:padding="40dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_border"
        >

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your username"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTint"
            android:backgroundTint="@color/colorTint"
            android:fontFamily="@font/whitney_regular"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Enter your password"
            android:textColor="@color/colorText"
            android:backgroundTint="@color/colorTint"
            android:textColorHint="@color/colorTint"
            android:fontFamily="@font/whitney_regular"
            />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Log In"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/whitney_bold"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/signup_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/whitney_regular"
            android:onClick="showDashboard"
            android:text="Haven't got an accont yet? Sign up"
            android:textAlignment="center"
            android:textColor="@color/colorWiteText" />
    </LinearLayout>
</RelativeLayout>